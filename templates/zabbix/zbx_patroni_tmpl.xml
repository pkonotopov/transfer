<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>4.4</version>
    <date>2020-12-18T08:50:13Z</date>
    <groups>
        <group>
            <name>Templates</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template Patroni Monitoring</template>
            <name>Template Patroni Monitoring</name>
            <groups>
                <group>
                    <name>Templates</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Patroni</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>Patroni cluster unlocked</name>
                    <type>DEPENDENT</type>
                    <key>patroni.cluster_unlocked</key>
                    <delay>0</delay>
                    <applications>
                        <application>
                            <name>Patroni</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.cluster_unlocked</params>
                        </step>
                        <step>
                            <type>BOOL_TO_DECIMAL</type>
                            <params/>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>patroni.get.node_info[{HOST.IP}]</key>
                    </master_item>
                </item>
                <item>
                    <name>Patroni db port check failed cluster members</name>
                    <type>DEPENDENT</type>
                    <key>patroni.db_port_check_failed_cluster_members</key>
                    <delay>0</delay>
                    <applications>
                        <application>
                            <name>Patroni</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.db_port_check_failed_cluster_members</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>patroni.get.node_info[{HOST.IP}]</key>
                    </master_item>
                </item>
                <item>
                    <name>Patroni node's configuration</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>patroni.get.config[{HOST.IP}]</key>
                    <trends>0</trends>
                    <value_type>TEXT</value_type>
                    <applications>
                        <application>
                            <name>Patroni</name>
                        </application>
                    </applications>
                    <triggers>
                        <trigger>
                            <expression>{change()}&lt;&gt;0</expression>
                            <name>Patroni configuration changed on {HOST.NAME}</name>
                            <url>https://wiki</url>
                            <priority>INFO</priority>
                            <dependencies>
                                <dependency>
                                    <name>Could not receive any data from Patroni on {HOST.NAME}</name>
                                    <expression>{Template Patroni Monitoring:patroni.get.node_info[{HOST.IP}].nodata(10m)}&lt;&gt;0</expression>
                                </dependency>
                            </dependencies>
                            <tags>
                                <tag>
                                    <tag>team</tag>
                                    <value>Operations-DBA</value>
                                </tag>
                            </tags>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>Patroni node's collected data</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>patroni.get.node_info[{HOST.IP}]</key>
                    <trends>0</trends>
                    <value_type>TEXT</value_type>
                    <applications>
                        <application>
                            <name>Patroni</name>
                        </application>
                    </applications>
                    <triggers>
                        <trigger>
                            <expression>{nodata(10m)}&lt;&gt;0</expression>
                            <name>Could not receive any data from Patroni on {HOST.NAME}</name>
                            <url>https://wiki</url>
                            <priority>HIGH</priority>
                            <description>Patroni may be down</description>
                            <dependencies>
                                <dependency>
                                    <name>Patroni monitoring script doesn't work on {HOST.NAME}</name>
                                    <expression>{Template Patroni Monitoring:patroni.monitoring_state.max(5m)}=0</expression>
                                </dependency>
                            </dependencies>
                            <tags>
                                <tag>
                                    <tag>team</tag>
                                    <value>Operations-DBA</value>
                                </tag>
                            </tags>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>Patroni monitoring last error</name>
                    <type>DEPENDENT</type>
                    <key>patroni.monitoring_error</key>
                    <delay>0</delay>
                    <trends>0</trends>
                    <value_type>CHAR</value_type>
                    <applications>
                        <application>
                            <name>Patroni</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.patroni_monitoring_error</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>patroni.get.node_info[{HOST.IP}]</key>
                    </master_item>
                </item>
                <item>
                    <name>Patroni monitoring state</name>
                    <type>DEPENDENT</type>
                    <key>patroni.monitoring_state</key>
                    <delay>0</delay>
                    <applications>
                        <application>
                            <name>Patroni</name>
                        </application>
                    </applications>
                    <valuemap>
                        <name>Service state</name>
                    </valuemap>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.patroni_monitoring_state</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>patroni.get.node_info[{HOST.IP}]</key>
                    </master_item>
                </item>
                <item>
                    <name>Patroni agent role</name>
                    <type>DEPENDENT</type>
                    <key>patroni.role</key>
                    <delay>0</delay>
                    <trends>0</trends>
                    <value_type>CHAR</value_type>
                    <applications>
                        <application>
                            <name>Patroni</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.role</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>patroni.get.node_info[{HOST.IP}]</key>
                    </master_item>
                </item>
                <item>
                    <name>Patroni agent scope</name>
                    <type>DEPENDENT</type>
                    <key>patroni.scope</key>
                    <delay>0</delay>
                    <trends>0</trends>
                    <value_type>CHAR</value_type>
                    <applications>
                        <application>
                            <name>Patroni</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.patroni.scope</params>
                        </step>
                        <step>
                            <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                            <params>5m</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>patroni.get.node_info[{HOST.IP}]</key>
                    </master_item>
                </item>
                <item>
                    <name>Patroni agent state</name>
                    <type>DEPENDENT</type>
                    <key>patroni.state</key>
                    <delay>0</delay>
                    <applications>
                        <application>
                            <name>Patroni</name>
                        </application>
                    </applications>
                    <valuemap>
                        <name>Service state</name>
                    </valuemap>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.state</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>patroni.get.node_info[{HOST.IP}]</key>
                    </master_item>
                    <triggers>
                        <trigger>
                            <expression>{max(5m)}=0</expression>
                            <name>Patroni agent is down on {HOST.NAME}</name>
                            <url>https://wiki</url>
                            <priority>HIGH</priority>
                            <dependencies>
                                <dependency>
                                    <name>Could not receive any data from Patroni on {HOST.NAME}</name>
                                    <expression>{Template Patroni Monitoring:patroni.get.node_info[{HOST.IP}].nodata(10m)}&lt;&gt;0</expression>
                                </dependency>
                            </dependencies>
                            <tags>
                                <tag>
                                    <tag>team</tag>
                                    <value>Operations-DBA</value>
                                </tag>
                            </tags>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>Patroni agent version</name>
                    <type>DEPENDENT</type>
                    <key>patroni.version</key>
                    <delay>0</delay>
                    <trends>0</trends>
                    <value_type>CHAR</value_type>
                    <applications>
                        <application>
                            <name>Patroni</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.patroni.version</params>
                        </step>
                        <step>
                            <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                            <params>5m</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>patroni.get.node_info[{HOST.IP}]</key>
                    </master_item>
                </item>
                <item>
                    <name>Patroni visible cluster members</name>
                    <type>DEPENDENT</type>
                    <key>patroni.visible_cluster_members</key>
                    <delay>0</delay>
                    <applications>
                        <application>
                            <name>Patroni</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.visible_cluster_members</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>patroni.get.node_info[{HOST.IP}]</key>
                    </master_item>
                    <triggers>
                        <trigger>
                            <expression>{change()}&lt;&gt;0</expression>
                            <name>Patroni visible cluster members changed on {HOST.NAME}</name>
                            <url>https://wiki</url>
                            <priority>HIGH</priority>
                            <dependencies>
                                <dependency>
                                    <name>Could not receive any data from Patroni on {HOST.NAME}</name>
                                    <expression>{Template Patroni Monitoring:patroni.get.node_info[{HOST.IP}].nodata(10m)}&lt;&gt;0</expression>
                                </dependency>
                            </dependencies>
                            <tags>
                                <tag>
                                    <tag>team</tag>
                                    <value>Operations-DBA</value>
                                </tag>
                            </tags>
                        </trigger>
                    </triggers>
                </item>
            </items>
        </template>
    </templates>
    <triggers>
        <trigger>
            <expression>{Template Patroni Monitoring:patroni.db_port_check_failed_cluster_members.min(16m)}&gt;0 and {Template Patroni Monitoring:patroni.monitoring_error.strlen()}&lt;&gt;-1</expression>
            <name>Patroni cluster member db is unreachable on {HOST.NAME}</name>
            <url>https://wiki</url>
            <priority>AVERAGE</priority>
            <dependencies>
                <dependency>
                    <name>Could not receive any data from Patroni on {HOST.NAME}</name>
                    <expression>{Template Patroni Monitoring:patroni.get.node_info[{HOST.IP}].nodata(10m)}&lt;&gt;0</expression>
                </dependency>
            </dependencies>
            <tags>
                <tag>
                    <tag>team</tag>
                    <value>Operations-DBA</value>
                </tag>
            </tags>
        </trigger>
    </triggers>
    <value_maps>
        <value_map>
            <name>Service state</name>
            <mappings>
                <mapping>
                    <value>0</value>
                    <newvalue>Down</newvalue>
                </mapping>
                <mapping>
                    <value>1</value>
                    <newvalue>Up</newvalue>
                </mapping>
            </mappings>
        </value_map>
    </value_maps>
</zabbix_export>
